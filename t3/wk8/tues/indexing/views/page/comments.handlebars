<h1>COMMENTS PAGE</h1>
<a href="/">BACK</a>

{{#if error }}
    <p>{{error}}</p>
{{/if}}


{{#if data }}
  <ul>
    {{#each data}}
      <li>
        <strong>Email: </strong>{{email}}
        <br>
        <strong>Post: </strong>{{postId}}
        <br>
        <strong>Body: </strong>{{body}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <form action="/comments" method="POST">
    <h3>Search By:</h3>
    <label>Email</label>
    <input name="email" type="text" /><br>
    <label> PostId </label>
    <input name="postId" type="text" /><br>
    <input type="submit" value="Submit" />
  </form>

{{/if}}


